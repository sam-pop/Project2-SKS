<div id="truckID" data-id="{{truck.id}}"></div>
<br>
<div class="row justify-content-center animated zoomIn" id="mainDiv">
    <div class="col-sm col-md-8 col-xl-6 align-self-center">
        <div class="card mb-3 shadow bg-white rounded text-center">
            <div class="card-block">
                <div class="text-center" id="backArrow">
                    <div class="text-left" style="padding-left:10px;float:left;">
                            <i class="material-icons" style="font-size:3em; color:#0480cf;">
                                arrow_back
                            </i>
                    </div>
                    <small class="text-muted" id="locUpdate"></small>
                </div>
                <hr style="width: 50%;">
                <h1 class="card-title text-center" style="color: #0480cf; text-shadow: 1px 1px 2px rgb(167, 167, 167);">{{truck.truckName}}
                    <small> - profile page.</small>
                </h1>

                <p class="card-text" style="padding-left:5px;">
                    <b>
                        <u>Truck Category: </u>
                    </b>
                    <br>{{truck.category}}.</p>
                <p class="card-text" style="padding-left:5px;">
                    <b>
                        <u>Truck Description: </u>
                    </b>
                    <br>{{truck.desc}}.</p>
                {{#if truck.menuURL}}
                <p class="card-text" style="padding-left:5px;">
                    <b>
                        <u>Truck Menu: </u>
                    </b>
                    <br>
                    <a href="{{truck.menuURL}}" target="_blank">View Menu!</a>
                </p>
                {{else}}
                <p class="card-text" style="padding-left:5px;">
                    <b>
                        <u>Truck Menu: </u>
                    </b>
                    <i> Menu not available.</i>
                </p>
                {{/if}}
                <img class="card-img-bottom" src="{{truck.pictureURL}}" alt="Food truck picture not available." style="opacity: 0.8;">
            </div>
            <div class="text-center">
                <p class="card-text">
                    <small class="text-muted">Profile last updated: {{truck.updatedAt}}</small>
                </p>
            </div>

        </div>


    </div>
</div>


{{> tppScript}}